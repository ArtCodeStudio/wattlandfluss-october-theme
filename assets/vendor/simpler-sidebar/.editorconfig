root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Javascripts
[*.js]
indent_style = tab
tab_width = 4

# Stylesheets
[*.{sass,scss,css}]
indent_style = space
indent_size = 2

# Pages
[*.{html,xml,md}]
indent_style = space
indent_size = 2

# Json, YAML and Configuration files
[.*rc,*.{json,yml}]
indent_style = space
indent_size = 2
